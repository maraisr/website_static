    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.1",
    "svelte": "3.29.7",
    "svelte-preprocess": "4.6.0",
    "tslib": "2.0.3"
  },
  "volta": {
    "node": "15.2.1",
    "yarn": "1.22.5"
